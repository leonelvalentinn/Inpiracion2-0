<section
  class="w-full max-w-7xl px-4 mb-10 mt-32 flex flex-col justify-center items-center xxs:mt-24 xs:mt-10 md:mt-72"
>
  <span
    class="bg-white text-[#13151a] rounded-full px-3 py-2 inline-block w-max h-max mb-5"
    >Nuestros Clientes</span
  >
  <h3 class="text-xl uppercase mb-4 lg:text-3xl">Grow fast with us</h3>
  <p class="max-w-[550px] text-center">
    Lorem, ipsum dolor sit amet consectetur adipisicing elit. Esse nostrum atque
    numquam minus sunt! Numquam distinctio quod harum dolores aut?
  </p>
  <div
    class="w-full max-w-5xl flex flex-wrap gap-7 justify-center items-center mt-10 lg:gap-12"
  >
    {
      clientsInfo.map((client) => (
        <a href={client.link} target="_blank" rel="noopener noreferrer">
          <Image
            class="w-10 lg:w-14"
            src={client.logo}
            alt={`Logo de ${client.name}`}
            width={client.width}
            height={client.height}
          />
        </a>
      ))
    }
  </div>
</section>
