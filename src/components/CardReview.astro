---
import Image from "astro/components/Image.astro";
import Quote from "./Icons/Quote.astro";

interface Props {
  text: string;
  name: string;
  imgSrc: string;
  company: string;
  theme?: string;
}

const { name, imgSrc, text, company, theme } = Astro.props;
---

<li
  class={`px-4 rounded-2xl splide__slide w-full group transition-all ${theme === "dark" ? "bg-[#2f2d35]" : "border border-blue-600 hover:bg-blue-100"} py-8`}
>
  <div class="grid place-items-between h-full">
    <Quote
      class={`w-7 ${theme === "light" ? "text-blue-500 fill-blue-500" : "text-violet-500 fill-violet-500"} -rotate-180 mb-4`}
    />
    <p>{text}</p>
    <div class="flex justify-start items-center gap-4 mt-4">
      <Image
        src={imgSrc}
        alt={`FotografÃ­a de ${name}`}
        width="100"
        height="100"
        class="w-10 h-10 object-cover rounded-full"
      />
      <span class="grid">
        <span>{name}</span>
        <span class="italic">{company}</span>
      </span>
    </div>
  </div>
</li>
