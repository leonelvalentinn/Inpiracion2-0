---
import Image from "astro/components/Image.astro";
import Quote from "./Icons/Quote.astro";

interface Props {
  text: string;
  name: string;
  imgSrc: string;
  company: string;
}

const { name, imgSrc, text, company } = Astro.props;
---

<li
  class="px-4 rounded-2xl splide__slide w-full group transition-all bg-[#2f2d35] py-8"
>
  <Quote class="w-7 text-violet-500 fill-violet-500 -rotate-180 mb-4" />
  <p>{text}</p>
  <div class="flex justify-start items-center gap-4 mt-4">
    <Image
      src={imgSrc}
      alt={`FotografÃ­a de ${name}`}
      width="100"
      height="100"
      class="w-10 rounded-full"
    />
    <span class="">
      <span>{name}</span>
      <span>{company}</span>
    </span>
  </div>
</li>
