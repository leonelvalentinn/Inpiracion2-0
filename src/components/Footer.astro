---
import Image from "astro/components/Image.astro";

const year = new Date().getFullYear();

import Facebook from "../images/logos/facebook.png";
import Instagram from "../images/logos/instagram.png";
import WhatsApp from "../images/logos/whatsapp.png";
import X from "../images/logos/x.png";

interface Props {
  theme?: string;
}

const { theme } = Astro.props;
---

<div
  class="w-full px-4 flex flex-col justify-center items-center mt-10 pb-4 text-white"
>
  <section
    class={`transition-all w-full max-w-7xl flex flex-col p-4 justify-center items-center bg-gradient-to-br ${theme === "light" ? "from-blue-700 to-blue-400" : "from-violet-700 to-violet-400"} rounded-2xl shadow-md gap-4 md:flex-row md:items-end lg:px-8 lg:pt-8`}
  >
    <div
      class="w-full flex flex-col justify-center items-center gap-4 md:mb-4 md:flex-row md:justify-between"
    >
      <p class="text-center">
        Copyright {year} | Derechos reservados por Agencia Inspiración Creativa
      </p>
      <div class="w-full flex items-center justify-center gap-4 lg:w-max">
        <a
          href="https://www.facebook.com/inspiracioncreativacdmx"
          aria-label="Ir a la página de Facebook de Agencia Inspiración"
          target="_blank"
          rel="noopener noreferrer"
          title="Ir a la página de Facebook de Inspiración Creativa"
          class="transition hover:scale-110"
        >
          <Image
            src={Facebook}
            width="128"
            height="128"
            alt="Logotipo de Facebook"
            class="w-10"
          />
        </a>
        <a
          href="https://www.instagram.com/inspiracion_creativa_mx/"
          aria-label="Ir a la página de Instagram de Agencia Inspiración"
          target="_blank"
          rel="noopener noreferrer"
          title="Ir a la página de Instagram de Inspiración Creativa"
          class="transition hover:scale-110"
        >
          <Image
            src={Instagram}
            width="128"
            height="128"
            alt="Logotipo de Instagram"
            class="w-10"
          />
        </a>
        <a
          href="https://api.whatsapp.com/send?phone=525575791467"
          aria-label="Ir al WhatsApp de Agencia Inspiración"
          target="_blank"
          rel="noopener noreferrer"
          title="Ir al WhatsApp de Inspiración Creativa"
          class="transition hover:scale-110"
        >
          <Image
            src={WhatsApp}
            width="128"
            height="128"
            alt="Logotipo de WhatsApp"
            class="w-10"
          />
        </a>
        <a
          href="https://x.com"
          aria-label="Ir a la página de X de Agencia Inspiración"
          target="_blank"
          rel="noopener noreferrer"
          title="Ir a la página de X de Inspiración Creativa"
          class="transition hover:scale-110"
        >
          <Image
            src={X}
            width="128"
            height="128"
            alt="Logotipo de X"
            class="w-10"
          />
        </a>
      </div>
    </div>
  </section>
</div>
